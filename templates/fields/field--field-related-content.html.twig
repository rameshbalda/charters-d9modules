{%
set colors = [
  'orange',
  'blue',
  'red',
  'green',
]
%}
<div class="basic-related-content">
  <div class="field--label">More links</div>
  <div class="row">
    {% for item in items %}
    <div class="col-sm-3">
        {% include '@napcs2017/components/hexagon/hexagon.html.twig' with {
          'color' : cycle(colors, loop.index0),
          'url' : item.content['#url'],
          'text' : item.content['#title'],
        } %}
      </div>
    {% endfor %}
  </div>
</div>
